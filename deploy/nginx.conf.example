# Nginx configuration for i2pptt
# Copy this file to your nginx sites-available directory and adjust as needed

server {
    listen 80;
    server_name toolkit.vmlchina.com;  # Change to your domain

    # Redirect /i2pptt to /i2pptt/ (with trailing slash) for Safari compatibility
    location = /i2pptt {
        return 301 /i2pptt/;
    }

    # Frontend (Vite dev server or static files)
    location /i2pptt {
        proxy_pass http://127.0.0.1:5174;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_buffering off;
    }

    # Backend API
    location /i2pptt/api/ {
        proxy_pass http://127.0.0.1:8001/i2pptt/api/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Prefix /i2pptt;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
        client_max_body_size 200M;  # Adjust for large file uploads
    }

    # Health check endpoint
    location /i2pptt/health {
        proxy_pass http://127.0.0.1:8001/i2pptt/health;
        proxy_set_header Host $host;
    }
}

